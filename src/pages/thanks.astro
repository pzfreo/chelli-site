---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Thank You" description="Your message has been sent successfully.">
  <section class="py-20 lg:py-32 min-h-[60vh] flex items-center">
    <div class="container-narrow text-center">
      <div class="mb-8">
        <svg class="w-16 h-16 mx-auto text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
      </div>

      <h1 class="font-serif text-4xl lg:text-5xl mb-4">Thank You</h1>

      <p class="text-gray-600 text-lg mb-8 max-w-xl mx-auto">
        Your message has been sent successfully. I'll get back to you within one working day.
      </p>

      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/" class="btn">Return Home</a>
        <a href="/gallery" class="btn btn-primary">Browse Gallery</a>
      </div>
    </div>
  </section>
</BaseLayout>
